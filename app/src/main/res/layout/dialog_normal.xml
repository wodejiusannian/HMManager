<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radios_write_4dp"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/tv_normal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="我是标题"
        android:textSize="16sp" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_normal_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#666666"
        android:paddingLeft="5dp"
        android:text="退出后，将接收不到消息" />

    <include layout="@layout/include_line"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_normal_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="#ac0000"
            android:background="@drawable/shape_radios_write_bottom_left_4dp"
            android:text="取消" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorMainBgLine" />

        <Button
            android:id="@+id/tv_normal_sure"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/shape_radios_write_bottom_right_4dp"
            android:text="确定"
            android:textColor="#00b2ff" />
    </LinearLayout>
</LinearLayout>
