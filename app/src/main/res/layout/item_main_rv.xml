<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_main_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/hm_main_item_bottom_bg"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <Button
            android:id="@+id/btn_item_main_refuse"
            style="@style/button_common"
            android:layout_marginBottom="1dp"
            android:background="@drawable/shape_button_refuse"
            android:text="残忍拒绝" />

        <Button
            android:id="@+id/btn_item_main_accept"
            style="@style/button_common"
            android:layout_marginBottom="1dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_button_accept"
            android:text="欣然接受" />

    </RelativeLayout>

    <include layout="@layout/include_item_order"></include>

</RelativeLayout>