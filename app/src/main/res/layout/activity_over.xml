<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="manager.love.i.hmmanager.ui.activity.MsgActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <include layout="@layout/include_back"></include>

        <android.support.design.widget.TabLayout
            android:id="@+id/tb_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            app:tabBackground="@drawable/select_msg_title_bg"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="#ffffff">

        </android.support.design.widget.TabLayout>
    </RelativeLayout>

    <include layout="@layout/include_line"></include>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_msg_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    </android.support.v4.view.ViewPager>
</LinearLayout>
